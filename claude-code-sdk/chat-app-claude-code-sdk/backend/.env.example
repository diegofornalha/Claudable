# Configurações do Neo4j (opcional)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Porta do servidor (padrão: 8080)
PORT=8080

# Modo de desenvolvimento (ativa logs detalhados)
NODE_ENV=development

# Configurações de CORS (opcional)
CORS_ORIGIN=http://localhost:3000

# Configurações de sessão (opcional)
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

# Configurações de upload (opcional)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Configurações de MCP (opcional)
MCP_DEBUG=false
MCP_TIMEOUT=30000

# Configurações de A2A (opcional)
A2A_ENABLED=true
A2A_PORT=8081